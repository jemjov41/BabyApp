<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="10"
    android:layout_marginBottom="8dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/background_rectangle_rounded_white_riple"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true">


    <ImageView
        android:id="@+id/imgResep"
        android:layout_width="@dimen/imgresepW"
        android:layout_height="@dimen/imgResepH"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@+id/imgResep"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resepTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title resep"
            android:textStyle="bold"
            android:textSize="17dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    "/>

        <TextView
            android:id="@+id/resepKisaranUsia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-6 bulan"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/bookmarkResep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_gravity="end"/>

</RelativeLayout>